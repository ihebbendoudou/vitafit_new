<svg xmlns="http://www.w3.org/2000/svg" width="400" height="300" viewBox="0 0 400 300">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f8f9fa;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e9ecef;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bg)" stroke="#dee2e6" stroke-width="2"/>
  
  <!-- Fork and Knife Icon -->
  <g transform="translate(200,150)">
    <!-- Fork -->
    <g transform="translate(-25,0)">
      <rect x="-2" y="-40" width="4" height="60" fill="#6c757d"/>
      <rect x="-8" y="-40" width="2" height="25" fill="#6c757d"/>
      <rect x="-4" y="-40" width="2" height="25" fill="#6c757d"/>
      <rect x="0" y="-40" width="2" height="25" fill="#6c757d"/>
      <rect x="4" y="-40" width="2" height="25" fill="#6c757d"/>
    </g>
    
    <!-- Knife -->
    <g transform="translate(25,0)">
      <rect x="-2" y="-40" width="4" height="60" fill="#6c757d"/>
      <path d="M -8,-40 L 8,-40 L 8,-25 L 0,-15 L -8,-25 Z" fill="#6c757d"/>
    </g>
  </g>
  
  <!-- Text -->
  <text x="200" y="220" text-anchor="middle" font-family="Arial, sans-serif" font-size="16" fill="#6c757d">
    Image de recette
  </text>
  <text x="200" y="240" text-anchor="middle" font-family="Arial, sans-serif" font-size="12" fill="#adb5bd">
    non disponible
  </text>
</svg>